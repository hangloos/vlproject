  <link rel="stylesheet" href="https://d1azc1qln24ryf.cloudfront.net/114779/Socicon/style-cf.css?rd5re8">



  <% if flash[:notice] %>
  <div class="notice"><%= flash[:notice] %></div>
  <% end %>


  
  <a class="btn btn-large" href="/">Home</a>

  <div class='content-container signup'>
  <div class='wrapper container'>

  <%= form_for :user do |f| %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>


  <div class="field">
    <%= f.label :access_level %><br>
    <%= f.radio_button :access_level, "candidate" %><%= f.label :access_level, "candidate" %>
    <%= f.radio_button :access_level, "company_admin" %><%= f.label :access_level, "company_admin" %>
    <%= f.radio_button :access_level, "super_admin" %><%= f.label :access_level, "super_admin" %>
  </div>

  <div class="field">
    <%= f.label :first_name %><br>
    <%= f.text_field :first_name%>
  </div>

  <div class="field">
    <%= f.label :last_name %><br>
    <%= f.text_field :last_name %>
  </div>

  <div class="field">
    <%= f.label :company %><br>
    <%= f.text_field :company%>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

</div>
</div>